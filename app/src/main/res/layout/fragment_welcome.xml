<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_ground"
        tools:context=".presentation.ui.welcome.WelcomeFragment">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/iv_welcome_logo"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="64dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_welcome_welcomeTv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_welcome_logo"
            android:text="Welcome To"
            android:textSize="32sp"
            android:layout_marginTop="32dp"
            android:textColor="@color/babyBlue"
            />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_welcome_app_name"
    app:layout_constraintTop_toBottomOf="@+id/tv_welcome_welcomeTv"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:text="@string/app_name"
    android:textSize="32sp"
    android:layout_marginTop="32dp"
    android:textColor="@color/babyBlue"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_welcome_app_description"
            app:layout_constraintTop_toBottomOf="@+id/tv_welcome_app_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/app_description"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:textColor="@color/babyBlue"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_welcome_sign_up"
            app:layout_constraintTop_toBottomOf="@+id/tv_welcome_app_description"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/sing_up_background"
            android:text="Create new account"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bt_welcome_sign_in"
            app:layout_constraintTop_toBottomOf="@+id/bt_welcome_sign_up"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:textColor="@color/babyBlue"
            android:background="@drawable/login_background"
            android:text="login"
            app:backgroundTint="@null"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_welcome_guest"
            app:layout_constraintTop_toBottomOf="@+id/bt_welcome_sign_in"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="64dp"
            android:text="@string/login_guest"
            android:textSize="16sp"
            android:textColor="@color/babyBlue"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>